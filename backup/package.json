{
  "name": "coffee-maker",
  "version": "1.0.3",
  "description": "A simple Coffee maker game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "Electron",
    "coffee-maker"
  ],
  "author": "A41K",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.a41k.coffeemaker",
    "productName": "CoffeeMaker",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "sounds/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon.ico"
    }
  }
}